                    <TextField layoutX="110.0" layoutY="95.0" promptText="set username" style="-fx-background-color: #FFFFFF;" />
                    <Label layoutX="20.0" layoutY="87.0" prefHeight="34.0" prefWidth="90.0" text="Username" />
                    <Label layoutX="20.0" layoutY="131.0" prefHeight="26.0" prefWidth="80.0" text="Email address" />
