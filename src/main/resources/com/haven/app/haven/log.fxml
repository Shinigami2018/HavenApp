                    <TextField layoutX="108.0" layoutY="61.0" />
                    <Button layoutX="108.0" layoutY="136.0" minHeight="29.6" minWidth="149.6" mnemonicParsing="false" prefHeight="26.0" prefWidth="138.0" text="Login" />
                </children>
            </AnchorPane>
            <AnchorPane fx:id="signuppane" prefHeight="400.0" prefWidth="343.0" style="-fx-background-color: #A9A9A9;" visible="true">
